{
  "name": "tweet-truncator",
  "version": "3.0.1",
  "description": "Truncate contents of tweet to 140 chars.",
  "keywords": [
    "twitter",
    "truncate",
    "length"
  ],
  "homepage": "https://github.com/azu/tweet-truncator",
  "bugs": {
    "url": "https://github.com/azu/tweet-truncator/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/azu/tweet-truncator.git"
  },
  "license": "MIT",
  "author": "azu",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "test": "test"
  },
  "files": [
    "lib/",
    "src/"
  ],
  "scripts": {
    "build": "tsc -p .",
    "prepare": "git config --local core.hooksPath .githook",
    "prepublishOnly": "npm run build",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "prepublish": "npm run --if-present build",
    "test": "mocha",
    "watch": "tsc -p . --watch"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "none"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "twitter-text": "^3.1.0"
  },
  "devDependencies": {
    "@types/debug": "4.1.8",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.2.5",
    "@types/twitter-text": "^3.1.5",
    "lint-staged": "^10.5.4",
    "mocha": "^10.2.0",
    "prettier": "^2.2.1",
    "ts-node": "^10.9.1",
    "ts-node-test-register": "^10.0.0",
    "typescript": "^5.0.4"
  },
  "packageManager": "yarn@1.22.19",
  "email": "azuciao@gmail.com"
}
